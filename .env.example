# ============================================
# KafkasDer Yönetim Paneli - Environment Variables
# ============================================
# Bu dosyayı .env.local olarak kopyalayın ve değerleri doldurun
# cp .env.example .env.local

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=KafkasDer Yönetim Paneli
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Supabase Configuration
# ============================================
# ⚠️ WARNING: NEVER commit real credentials to version control!
# Get these values from: Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service Role Key (Server-side only - NEVER expose to client!)
# Supabase Dashboard → Settings → API → service_role key
# ⚠️ CRITICAL: This key has admin privileges - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_USE_MOCK_API=true

# ============================================
# Authentication Settings
# ============================================
NEXT_PUBLIC_AUTH_COOKIE_NAME=kafkasder-auth
NEXT_PUBLIC_AUTH_COOKIE_EXPIRES=7d

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_QR_SCANNER=true
NEXT_PUBLIC_ENABLE_EXCEL_EXPORT=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# ============================================
# Webhook Configuration
# ============================================
# Render webhook secret (auto-generated in production)
RENDER_WEBHOOK_SECRET=

# ============================================
# Sentry Error Tracking
# ============================================
# ⚠️ WARNING: NEVER commit real Sentry credentials to version control!
# Get these values from Sentry.io Dashboard → Settings → Projects → [Your Project]
# DSN: Settings → Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here@your_org.ingest.sentry.io/your_project_id

# Organization and project slugs (found in your Sentry URL: sentry.io/organizations/{org}/projects/{project})
SENTRY_ORG=your_sentry_organization_slug
SENTRY_PROJECT=your_sentry_project_slug

# Auth token for source map uploads (Settings → Auth Tokens)
# Required scopes: project:releases, project:write
# IMPORTANT: Never commit this token - add to CI/CD secrets only
SENTRY_AUTH_TOKEN=

# ============================================
# Sentry MCP (Model Context Protocol)
# ============================================
# Access token for Sentry MCP integration with AI assistants
# Get from: Sentry Dashboard → Settings → Account → API → Auth Tokens
# Required scopes: project:read, event:read, issue:read
SENTRY_ACCESS_TOKEN=

# ============================================
# Analytics (Optional)
# ============================================
# NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ============================================
# Builder.io (Optional)
# ============================================
# NEXT_PUBLIC_BUILDER_API_KEY=your_builder_api_key

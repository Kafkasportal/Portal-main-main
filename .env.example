# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="KafkasDer Panel"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_API_TIMEOUT=30000

# Mock Mode (set to 'false' when real API is ready)
NEXT_PUBLIC_USE_MOCK_API=true

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=auth-token
NEXT_PUBLIC_AUTH_COOKIE_EXPIRES=7

# Feature Flags
NEXT_PUBLIC_ENABLE_QR_SCANNER=true
NEXT_PUBLIC_ENABLE_EXCEL_EXPORT=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Builder.io (optional)
NEXT_PUBLIC_BUILDER_API_KEY=

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Database (Neon PostgreSQL)
# Get from: https://console.neon.tech → Your Project → Connection Details
DATABASE_URL="postgresql://username:password@ep-xxx.region.aws.neon.tech/kafkasder?sslmode=require"

# Prisma (optional - for pooling)
# DIRECT_URL for migrations, DATABASE_URL for queries
DIRECT_URL="postgresql://username:password@ep-xxx.region.aws.neon.tech/kafkasder?sslmode=require"

# Database Pool (optional)
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2
